CC			=	gcc

SRC			=	src/main.c			\
				src/term.c			\
				src/debug.c			\
				src/score.c			\
				src/debug2.c		\
				src/params.c		\
				src/params2.c		\
				src/params3.c		\
				src/parsing.c		\
				src/display.c		\
				src/params4.c		\
				src/params5.c		\
				src/parsing2.c		\
				src/tab_game.c		\
				src/color_init.c	\
				src/my_get_nbr.c	\
				src/print_x_to_x.c	\
				src/print_y_to_y.c

OBJ			=	$(SRC:.c=.o)

NAME		=	tetris

LIBPRINTF	=	make -C ./lib/my_printf

LIBGNL		=	make -C ./lib/my_gnl

all: $(NAME)

$(NAME): $(OBJ)
	$(LIBPRINTF)
	$(LIBGNL)
	gcc -o $(NAME) $(OBJ) -L./lib -lprintf -lgnl -lncurses

clean:
	rm -f $(OBJ)
	$(LIBPRINTF) clean
	$(LIBGNL) clean

fclean: clean
	rm -f $(NAME)
	rm -f lib/libprintf.a
	rm -f lib/libgnl.a

re: fclean all
